<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kmsoftware.myschoolapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <meta-data
            android:name="DATABASE"
            android:value="school_app.db" />
        <meta-data
            android:name="VERSION"
            android:value="5" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.kmsoftware" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddSubjectActivity"
            android:label="@string/title_activity_add_subject"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddLessonActivity"
            android:label="@string/title_activity_add_lesson"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddMarkActivity"
            android:label="@string/title_activity_add_mark"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MarksExpListActivity"
            android:label="@string/title_activity_marks_exp_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GenericListActivity"
            android:label="@string/title_activity_generic_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>